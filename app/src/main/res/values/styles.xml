<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:editTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/sub_header_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme3" parent="@style/Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="background">@android:color/transparent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/actionBar</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit"/>

    <style name="RaisedSignUpButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#9E9E9E</item>
        <item name="selectableItemBackground">@style/ripple</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ripple" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#9E9E9E</item>
    </style>

    <style name="titleTextDef">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listTextDef">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:textSize">@dimen/list_item_size</item>
    </style>

    <style name="subHeadingTextDef">
        <item name="android:textColorHint">@color/sub_header_text</item>
        <item name="android:textColor">@color/sub_header_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/subheading_text_size</item>
    </style>

    <style name="captionTextDef">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <style name="caption2TextDef">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/caption2_text_size</item>
    </style>

    <style name="bodyTextDef">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>


    <style name="body1TextDef">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
    </style>

    <style name="descriptiveTExtDef">
        <item name="android:textColor">@color/sub_header_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/descriptive_text_size</item>
    </style>

    <style name="headLineTextDef">
        <item name="android:textColor">@color/sub_header_text</item>
        <item name="android:textSize">@dimen/head_line_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headNormalLineTextDef">
        <item name="android:textColor">@color/sub_header_text</item>
        <item name="android:textSize">@dimen/head_line_text_size</item>
    </style>

    <style name="buttonTextDef">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="buttonHighlight" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/buttonHighlight</item>
        <item name="selectableItemBackground">@drawable/button_group</item>
    </style>

    <style name="buttonHighlightColor" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/buttonHighlight</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="buttonColor" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/buttonHighlight</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="invertColor" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/buttonHighlight</item>
        <item name="colorButtonNormal">@color/invert_color</item>
    </style>

    <style name="cartColor" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/buttonHighlight</item>
        <item name="colorButtonNormal">@color/cartButton</item>
    </style>

    <style name="buttonHighlightColorInverted" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#9fa8da</item>
        <item name="colorButtonNormal">#303f9f</item>
    </style>

    <style name="buttonRounded" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/sub_header_text</item>
        <item name="android:background">@drawable/button_bg_rounded</item>
        <item name="colorControlHighlight">@color/buttonHighlight</item>
    </style>

    <style name="buttonRoundedDark" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_bg_rounded_dark</item>
        <item name="colorControlHighlight">@color/buttonHighlight</item>
    </style>

    <style name="buttonTransperentRounded" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_transperent_rounded</item>
        <item name="colorControlHighlight">@color/buttonHighlight</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">#c5c5c5</item>
        <item name="android:editTextColor">#c5c5c5</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@android:color/white</item>
        <item name="queryBackground">@android:color/white</item>
    </style>

</resources>