<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/screen_background_gradient">

    <Button
        android:id="@+id/loginButtonAuth"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in_auth_button"
        android:textColor="@android:color/white"
        android:theme="@style/buttonHighlight"
        app:layout_constraintBottom_toBottomOf="@+id/closeAuthButton"
        app:layout_constraintTop_toTopOf="@+id/closeAuthButton"
        android:layout_marginStart="259dp"
        app:layout_constraintLeft_toRightOf="@+id/closeAuthButton"
        android:layout_marginLeft="259dp"/>

    <ImageView
        android:id="@+id/closeAuthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/ic_logo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/fontTextView2"
        app:layout_constraintRight_toRightOf="@+id/closeAuthButton"
        android:layout_marginTop="56dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="55dp"
        app:layout_constraintTop_toTopOf="@+id/closeAuthButton"
        app:layout_constraintLeft_toRightOf="@+id/closeAuthButton"/>

    <com.shop440.Widgets.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_auth_text"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        style="@style/headNormalLineTextDef"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="167dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/fontTextView2"/>


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign in with Facebook"
        style="@style/buttonRounded"
        android:id="@+id/facebookSignin"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/createAccountAuthButton"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        style="@style/buttonTransperentRounded"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/facebookSignin"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="255dp"
        app:layout_constraintLeft_toLeftOf="@+id/facebookSignin"
        android:id="@+id/createAccountAuthButton"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="21dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="21dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="395dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="395dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp"/>


</android.support.constraint.ConstraintLayout>