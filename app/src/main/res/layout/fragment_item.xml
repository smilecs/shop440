<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_margin="16dp"
                                    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <com.shop440.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:textSize="16sp"
            tools:text="item name"
            style="@style/listTextDef"
            app:fontName="RobotoMedium"/>
        <com.shop440.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopName"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            style="@style/listTextDef"
            app:fontName="OpenSansRegular"
            tools:text="shop name"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <com.shop440.widgets.FontTextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/listTextDef"
                android:id="@+id/quantityText"
                tools:text="quantity"
                app:fontName="RobotoMedium"/>
            <com.shop440.widgets.FontTextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/listTextDef"
                android:id="@+id/amountText"
                tools:text="amount"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                app:fontName="RobotoMedium"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:id="@+id/removeItem"
                android:layout_alignParentStart="true"
                android:foreground="?android:selectableItemBackground"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/reduceItem"
                    android:layout_marginEnd="36dp"
                    android:foreground="?android:selectableItemBackground"
                    app:srcCompat="@drawable/ic_subtract_24dp"/>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/addItem"
                    android:foreground="?android:selectableItemBackground"
                    app:srcCompat="@drawable/ic_plus_24dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
