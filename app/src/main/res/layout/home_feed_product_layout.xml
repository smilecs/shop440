<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="172dp"
              android:layout_height="wrap_content"
              android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginTop="12dp"
              android:minWidth="136dp"
              android:maxWidth="184dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/productPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="128dp"
        android:minHeight="124dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.shop440.widgets.FontTextView
            android:id="@+id/productShopTitle"
            style="@style/subHeadingTextDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="ShopName"
            android:textStyle="normal"
            app:fontName="RobotoMedium"
            />

        <com.shop440.widgets.FontTextView
            android:id="@+id/productFeedTitle"
            style="@style/descriptiveTExtDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:hint="ProductTitle"
            app:fontName="RobotoCondensedBold"/>

        <com.shop440.widgets.FontTextView
            android:id="@+id/productFeedPrice"
            style="@style/caption2TextDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="2300000"
            app:fontName="RobotoCondensedLight"/>

    </LinearLayout>
</LinearLayout>