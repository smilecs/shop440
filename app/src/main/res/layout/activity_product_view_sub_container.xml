<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:background="@drawable/bottom_border"
    android:paddingBottom="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.shop440.widgets.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productViewTitle"
        android:text="Title"
        android:layout_marginStart="16dp"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        app:fontName="RobotoMedium"
        app:autoSizeTextType="uniform"
        style="@style/subHeadingTextDef"/>
    <com.shop440.widgets.FontTextView
        android:id="@+id/productViewCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        android:textColor="@android:color/black"
        android:text="Calabar"
        app:fontName="RobotoRegular"
        style="@style/body1TextDef"/>
    <com.shop440.widgets.FontTextView
        android:id="@+id/productViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        android:textColor="@android:color/black"
        android:text="Category"
        app:fontName="RobotoRegular"
        style="@style/body1TextDef"/>

    <com.shop440.widgets.FontTextView
        android:id="@+id/productViewShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        android:textColor="@android:color/black"
        android:text="Shop"
        app:fontName="RobotoRegular"
        style="@style/body1TextDef"/>
</LinearLayout>